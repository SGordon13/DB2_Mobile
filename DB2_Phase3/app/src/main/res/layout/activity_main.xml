<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:foregroundGravity="center_vertical|clip_horizontal"
        android:gravity="center"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stSignInButton"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/paRegisterButton"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="Parent"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.134" />

    <Button
        android:id="@+id/stRegisterButton"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="Student"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/paRegisterButton"
        app:layout_constraintHorizontal_bias="0.879"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.134" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="302dp"
        android:layout_height="65dp"
        android:foregroundGravity="center_vertical|clip_horizontal"
        android:gravity="center"
        android:text="Study Groups"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="50sp"
        android:typeface="normal"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:foregroundGravity="center_vertical|clip_horizontal"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/stSignInButton"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:text="Student"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/paSignInButton"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/adSignInButton"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/paSignInButton"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Parent"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/adSignInButton"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:text="Admin"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>